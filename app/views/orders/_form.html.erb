<%= form_for(Order.new, class: 'form-group') do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation" class="form-horizontal">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if user %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, size: 40, class: 'form-control', value: user.name, disabled: true %>
    </div>

    <div class="field">
      <%= form.label :address %>
      <%= form.text_area :address, rows: 3, cols: 40, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :pay_type %>
      <%= form.select :pay_type, Order.pay_types.keys, prompt: 'Select payment method', class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', value: user.email, disabled: true %>
    </div>

    <div class="actions checkout">
      <%= form.submit 'Place order', :class => 'btn btn-success btn-lg' %>
    </div>

  <% else %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, size: 40, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :address %>
      <%= form.text_area :address, rows: 3, cols: 40, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :pay_type %>
      <%= form.select :pay_type, Order.pay_types.keys, prompt: 'Select payment method', class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="actions checkout">
      <%= form.submit 'Place order', :class => 'btn btn-success btn-lg' %>
    </div>

  <% end %>


<% end %>
