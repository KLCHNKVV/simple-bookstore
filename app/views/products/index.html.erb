<p id="notice"><%= notice %></p>
<h1>Products</h1>
<table class="table table-bordered">
  <% @products.each do |product| %>
      <tr class="<%= cycle 'list_line_odd', 'list_line_even' %> danger">
        <td>
          <%= image_tag(product.image_url, class: 'list_image img-rounded') %>
        </td>

        <td class="list_description info">
          <dl>
            <dt><%= product.title %></dt>
            <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
          </dl>
        </td>
      </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New product',new_product_path, class: 'btn btn-link btn-lg' %>