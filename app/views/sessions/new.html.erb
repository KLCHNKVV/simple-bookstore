<div class="form-group depot_form">
  <p id="notice"><%= flash[:alert] %></p>
  <p id="notice"><%= flash[:notice] %></p>
  <%= form_tag do %>
    <fieldset>
      <legend>Log In</legend>
      <div>
        <%= label_tag :name, 'Login' %>
        <%= text_field_tag :name, params[:name], class: 'form-control' %>
      </div>

      <div>
        <%= label_tag :password, 'Password' %>
        <%= password_field_tag :password, params[:password], class: 'form-control' %>
      </div>

      <div>
        <%= submit_tag 'Log In', class: 'btn btn-success btn-lg', style: 'float: right; margin-right: 30px; margin-bottom: 5px; width: 6em' %>
      </div>
    </fieldset>
  <% end %>
  <div>
    <%= button_to 'Are you administrator? Enter Site Administration', rails_admin_url, method: :get, class: 'btn btn-primary btn-md' %>
  </div>
</div>