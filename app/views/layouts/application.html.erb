<html>
<head>
  <title>Your Bookshelf</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="<%= controller.controller_name %>">
<div id="banner">
  <%= link_to image_tag('logo.svg', alt: 'Your Bookshelf', size: '60x60'), store_index_path %>
  <h1 style="color: dodgerblue;">Your Bookshelf</h1>
  <span class="title"><%= @page_title %></span>
  <% if session[:user_id] %>
    <div class="user_info">
      <% sign_in(User.find_by(id: session[:user_id])) %>
      <% current_user = User.find_by(id: session[:user_id]) %>
      <p>Logged as <%= current_user.name %></p>
      <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-default btn-lg' %>
    </div>
  <% end %>
</div>
<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>
<div class="scroller" style="height:620px">
  <div><%= image_tag 'http://www.businessexchange.ca/wp-content/uploads/2016/08/maxresdefault.jpg', alt: 'Grand Opening',
                     class: 'opening-image', size: '1895x640', style: 'border-radius: 20px' %></div>
  <div><%= image_tag("https://intervpn.com/blog/wp-content/uploads/2016/12/new-year-best-vpn-2017-deals-860x395.png",
                     class: 'new-year-image', size: '1895x640', style: 'border-radius: 20px') %></div>
  <div>
    <%= image_tag 'https://cdn.shopify.com/s/files/1/0736/8771/products/W4P-BOOKSHELF-002_8b58f04d-3cb7-4e66-bc84-a2ba0bd2af79.jpg?v=1442583418', alt: 'Bookshelf',
                  style: 'border-radius: 20px', size: '1896x640' %>
  </div>
</div>
<div id="columns">
  <div id="side">
    <div id="cart">
      <% if @cart %>
        <%= hidden_div_if @cart.line_items.empty?, id: 'cart' do %>
          <%= render @cart %>
        <% end %>
      <% end %>
    </div>
    <ul>
      <li><a href="">Home</a></li>
      <br>
      <li><a href="">Questions</a></li>
      <br>
      <li><a href="">News</a></li>
      <br>
      <li><a href="">Contact</a></li>
      <br>
      <div>
        <%= link_to 'Sign Up', user_new_path, style: 'font-size: medium; color: black', id: 'links' %>
        <%= link_to 'Log In', login_url, style: 'font-size: medium; color: black', id: 'links' %>
      </div>
      <br>
    </ul>
  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>