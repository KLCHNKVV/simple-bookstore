<% if line_item == @current_item %>
  <tr id="current_item">
<% else %>
  <tr class="item_info info">
<% end %>
<td style="font-size: medium; width: 10px"><%= line_item.quantity %> st.</td>
<td style="font-size: medium; width: 10px"><%= line_item.product.title %></td>
<td class="item_price" style="font-size: large"><%= number_to_currency(line_item.total_price) %></td>
</tr>